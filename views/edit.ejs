<%- include('partials/_header') -%>

<body>
<!-- Navbar -->
  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <form method="post" method="POST" action="/posts/<%= post._id %>?_method=PUT">
              <h1><input type="text" value="<%= post.title %>" name="title"></h1>
              <h2 class="subheading"><input type="text" value="<%= post.detail %>" name="detail"></h2>
              <span class="meta">Posted by
                <a href="#">Start Bootstrap</a>
                on <%= post.dateCreated %></span>
                <button type="submit" class="btn btn-success">Save</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </header>

 
  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>

 
